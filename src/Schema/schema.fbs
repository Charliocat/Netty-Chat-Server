//Schema for Netty Chat Server

namespace Schema;

union Data {Chat, Credentials, Auth, Lobbies} 

table Chat {
  timestamp:ulong;
  author:string (required);
  message:string (required);
}

table Credentials {
  username:string (required);
  password:string (required);
}

table Auth {
  verified:bool;
  ticket:string;
}

table Lobbies {
  list:[string];
}

table Message {
  data:Data;
}

root_type Message;
